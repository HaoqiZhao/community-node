# Debian 9 Stretch running node.js website and java-tron via JDK8

# run this in a bash terminal on a secure computer first

 password="unencrypted_password"
 pass=$(perl -e 'print crypt($ARGV[0], "password")' $password)
 echo $pass
 
 > encrypted_password

# then when the time comes add a new user like this
 
 useradd -m -p encrypted_passord newsuperuser
 echo "newsuperuser 	ALL=(ALL) ALL" >> /etc/sudoers
 chsh newsuperuser -s /bin/bash



